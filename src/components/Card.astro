---
import { Picture } from "astro:assets";

type Props = {
  title: string;
  description: string;
  tags: {
    name: string;
    class: string;
    icon: Function;
  }[];
  date: string;
  image: ImageMetadata;
};

const { date, description, image, tags, title } = Astro.props;
---

<article class="space-y-4">
  <div
    class="rounded-lg mb-6 overflow-hidden relative after:absolute after:inset-0 after:rounded-lg after:shadow-[inset_0_0_0_1px_hsl(var(--accent)_/_0.2)]"
  >
    <Picture src={image} alt={title} quality={100} />
  </div>
  <span class="dark:text-gray-400 text-gray-600 text-sm">{date}</span>
  <h3
    class="text-2xl lg:text-balance font-bold dark:text-white text-neutral-800"
  >
    {title}
  </h3>
  <p class="text-pretty dark:text-gray-400 text-gray-600">{description}</p>
  <ul class="flex gap-x-2 gap-y-4 flex-wrap">
    {
      tags.map((tag) => (
        <li>
          <span
            class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
          >
            <tag.icon class="size-4" />
            {tag.name}
          </span>
        </li>
      ))
    }
  </ul>
</article>
