---
import HeaderSocialLink from "./HeaderSocialLink.astro";
import Github from "./icons/Github.astro";
import LinkedIn from "./icons/LinkedIn.astro";
---

<footer
  class="max-w-3xl mx-auto px-4 pt-8 mt-24 pb-4 border-t border-neutral-200 dark:border-neutral-700"
>
  <a href="/" class="mx-auto block w-fit sm:mx-0">
    <h2 class="text-2xl font-mono font-bold text-neutral-800 dark:text-white">
      /diecodev
    </h2>
  </a>
  <div
    class="w-full py-4 text-sm flex flex-col sm:flex-row items-center justify-between dark:text-gray-300 text-neutral-600 gap-y-4"
  >
    <p>Â© Designed and developed by Diecodev.</p>
    <nav class="flex gap-4">
      <HeaderSocialLink
        href="https://github.com/diecodev"
        title="Go to Github"
        srOnly="go to github profile"
      >
        <Github class="w-5 h-5 dark:text-gray-300 text-neutral-600" />
      </HeaderSocialLink>
      <HeaderSocialLink
        href="https://www.linkedin.com/in/diecodev"
        title="Visit LinkedIn"
        srOnly="go to linkedin profile"
      >
        <LinkedIn class="w-5 h-5 dark:text-gray-300 text-neutral-600" />
      </HeaderSocialLink>
    </nav>
  </div>
</footer>
