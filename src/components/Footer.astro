import HeaderSocialLink from "./HeaderSocialLink.astro";
import Github from "./icons/Github.astro";
import LinkedIn from "./icons/LinkedIn.astro";
---

<footer
  class="max-w-3xl mx-auto px-4 pt-8 mt-24 pb-4 border-t border-accent/20"
>
  <a href="/"><h2 class="text-2xl font-mono font-bold">/diecodev</h2></a>
  <div
    class="w-full py-4 text-sm flex flex-col sm:flex-row sm:items-center sm:justify-between text-gray-300 gap-y-4"
  >
    <p>Â© Designed and developed by Diecodev.</p>
    <nav class="flex gap-4">
      <HeaderSocialLink
        href="https://github.com/diecodev"
        title="Go to Github"
        srOnly="go to github profile"
      >
        <Github class="w-5 h-5 text-gray-300" />
      </HeaderSocialLink>
      <HeaderSocialLink
        href="https://www.linkedin.com/in/diecodev"
        title="Visit LinkedIn"
        srOnly="go to linkedin profile"
      >
        <LinkedIn class="w-5 h-5 text-gray-300" />
      </HeaderSocialLink>
    </nav>
  </div>
